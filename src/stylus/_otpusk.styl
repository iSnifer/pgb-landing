.otpusk
    padding 50px 0 40px

    &__title
        font-size 48px
        text-align center

    &__text
        font-size 18px
        text-align center
        padding 30px 0 0

    &__pic
        position relative
        width 643px
        height 416px
        bg(otpusk, pic)
        margin 10px auto 0

        &:after
            content ""
            display block
            width 51px
            height 25px
            position absolute
            top 100px
            right 0
            z-index 2
            bg(otpusk, arrow)

    &__yellow
        width 378px
        height 406px
        float right
        bg(otpusk, 'yellow')
        margin -45px -80px 0 0
